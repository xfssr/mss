generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model SiteSettings {
  id               Int      @id @default(1)

  heroTitleHe      String   @default("תוכן שמרגיש יוקרתי. מינימליסטי. מדויק.")
  heroTitleEn      String   @default("Minimal content that looks premium.")

  heroSubtitleHe   String   @default("בחרו קטגוריה → בחרו חבילה → מלאו תאריך/עיר → ההודעה ל-WhatsApp מוכנה.")
  heroSubtitleEn   String   @default("Pick a category → choose a package → add date/city → WhatsApp message is ready.")

  promoTextHe      String   @default("אני יוצר תוכן ל-Hospitality ו-Real Estate — צילום נקי, תאורה רכה, תוצאה שמוכרת.")
  promoTextEn      String   @default("I create content for hospitality & real estate — clean light, premium feel, sales-ready.")

  aboutTextHe      String   @default("סגנון נקי ומדויק: קומפוזיציה, תאורה, תנועה עדינה. מינימום רעש — מקסימום ‘יוקרתי’.")
  aboutTextEn      String   @default("Clean, precise visual style: composition, light, subtle motion. Less noise — more premium.")

  contactTextHe    String   @default("הכי מהר ב-WhatsApp. לרוב עונה תוך 1–3 שעות.")
  contactTextEn    String   @default("Fastest via WhatsApp. Usually reply within 1–3 hours.")

  instagramHandle  String   @default("@emil_edition")
  email            String   @default("nisenem98@gmail.com")

  contentOverridesJson String @default("{}")

  updatedAt        DateTime @updatedAt
}

model PricingConfig {
  id               Int      @id @default(1)
  currency         String   @default("$")

  duration2h       Int      @default(220)
  duration4h       Int      @default(380)
  duration8h       Int      @default(650)
  durationDay      Int      @default(850)
  durationWeek     Int      @default(2600)

  perReel          Int      @default(80)
  perPhoto         Int      @default(10)

  monthlyStarter   Int      @default(2400)
  monthlyGrowth    Int      @default(3600)
  monthlyPro       Int      @default(5200)

  socialManagement Int      @default(900)
  targetingSetup   Int      @default(300)

  updatedAt        DateTime @updatedAt
}

model HeroMedia {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  titleHe   String   @default("")
  titleEn   String   @default("")
  order     Int      @default(0)
  updatedAt DateTime @updatedAt
}

model PriceItem {
  id        Int      @id @default(autoincrement())

  titleHe   String
  titleEn   String
  price     String

  noteHe    String   @default("")
  noteEn    String   @default("")
  detailsHe String   @default("")
  detailsEn String   @default("")

  order     Int      @default(0)
  updatedAt DateTime @updatedAt
}

model Catalog {
  id                    Int      @id @default(autoincrement())
  slug                  String   @unique

  titleHe               String
  titleEn               String
  shortDescriptionHe    String
  shortDescriptionEn    String
  longDescriptionHe     String
  longDescriptionEn     String

  coverImage            String   @default("")

  promoVideoUrl         String   @default("")
  promoVideoTitleHe     String   @default("")
  promoVideoTitleEn     String   @default("")
  promoVideoDescriptionHe String @default("")
  promoVideoDescriptionEn String @default("")

  tagsJson              String   @default("[]")
  popular               Boolean  @default(false)

  examples              Example[]
  updatedAt             DateTime @updatedAt
}
model Example {
  id            Int      @id @default(autoincrement())
  catalogId     Int
  catalog       Catalog  @relation(fields: [catalogId], references: [id], onDelete: Cascade)

  order         Int      @default(0)

  titleHe       String   @default("")
  titleEn       String   @default("")
  descriptionHe String   @default("")
  descriptionEn String   @default("")

  mediaType     String   @default("IMAGE")
  mediaUrl      String
  posterUrl     String?

  link          String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([catalogId])
}
